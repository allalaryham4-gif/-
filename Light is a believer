    <!-- Navigation -->
    <nav class="fixed bottom-0 left-0 right-0 h-24 bg-black/40 backdrop-blur-2xl border-t border-white/10 flex justify-around items-center px-4 z-[100]">
        <button onclick="switchTab('quran')" id="nav-quran" class="nav-item flex flex-col items-center gap-1 text-white/50 p-2 rounded-2xl transition-all">
            <i data-lucide="book-open" size="20"></i>
            <span class="text-[9px] font-bold">المصحف</span>
        </button>

        <button onclick="switchTab('prayer')" id="nav-prayer" class="nav-item flex flex-col items-center gap-1 text-white/50 p-2 rounded-2xl transition-all">
            <i data-lucide="shield-check" size="20"></i>
            <span class="text-[9px] font-bold">الخشوع</span>
        </button>
        
        <button onclick="switchTab('home')" id="nav-home" class="nav-item active flex flex-col items-center gap-1 text-white/50 p-4 rounded-3xl transition-all -mt-8 shadow-2xl">
            <i data-lucide="home" size="24"></i>
        </button>

        <button onclick="switchTab('athkar')" id="nav-athkar" class="nav-item flex flex-col items-center gap-1 text-white/50 p-2 rounded-2xl transition-all">
            <i data-lucide="sparkles" size="20"></i>
            <span class="text-[9px] font-bold">الأذكار</span>
        </button>

        <button onclick="openAcademy()" id="nav-academy" class="nav-item flex flex-col items-center gap-1 text-white/50 p-2 rounded-2xl transition-all">
            <i data-lucide="graduation-cap" size="20"></i>
            <span class="text-[9px] font-bold">الأكاديمية</span>
